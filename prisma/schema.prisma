generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  // Optional but recommended for Supabase + Prisma migrations
  directUrl = env("DIRECT_URL")
}

enum NodeType {
  root_question
  followup_question
  ai_answer
  followup_answer
}

model Board {
  id          String   @id @default(cuid())
  title       String
  description String?
  createdAt   DateTime @default(now())
  nodes       Node[]
  edges       Edge[]
}

model Node {
  id        String   @id @default(cuid())
  boardId   String
  board     Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
  type      NodeType
  content   String
  rootId    String?
  parentId  String?
  x         Int
  y         Int
  width     Int
  height    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Edge {
  id        String   @id @default(cuid())
  boardId   String
  board     Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
  sourceId  String
  targetId  String
  createdAt DateTime @default(now())
}
